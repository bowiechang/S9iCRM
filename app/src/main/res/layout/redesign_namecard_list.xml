<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="185dp"
    android:layout_marginTop="15dp"
    android:padding="20dp"
    android:background="@drawable/rectangle_light"
    tools:ignore="ExtraText">

    <TextView
        android:id="@+id/tvCompanyName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_slab_bold"/>

    <TextView
        android:id="@+id/tvCompanyAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_condensed_bold"
        android:layout_below="@id/tvCompanyName"/>

    <TextView
        android:id="@+id/tvCompanyLack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_condensed_bold"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tvCompanyAddress"/>

    <TextView
        android:id="@+id/tvCompanyPriorityLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:text="PRIORITY LEVEL: "
        android:textColor="@color/black"
        android:layout_below="@id/tvCompanyLack"
        android:fontFamily="@font/roboto_condensed_bold"/>

    <TextView
        android:id="@+id/tvCompanyOfficeNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textSize="23sp"
        android:textColor="@color/black"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/roboto_condensed_bold"/>

    <ImageView
        android:id="@+id/ivNumberCall"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/icon_followup_type"
        android:adjustViewBounds="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="2dp"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tvNumberOfTimesCalled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/ivNumberCall"
        android:layout_marginRight="5dp"
        android:fontFamily="@font/roboto_condensed_bold"/>





</RelativeLayout>