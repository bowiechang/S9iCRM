<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="155dp"
    android:layout_marginTop="15dp"
    android:paddingTop="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="20dp"
    android:background="@drawable/rectangle_light"
    tools:ignore="ExtraText">

    <TextView
        android:id="@+id/tvCompanyName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_slab_bold"/>

    <TextView
        android:id="@+id/tvCompanyAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_condensed_bold"
        android:layout_below="@id/tvCompanyName"/>



    <TextView
        android:id="@+id/tvCompanyPriorityLevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textStyle="italic"
        android:layout_marginTop="7dp"
        android:text="Priority Level: "
        android:textColor="@color/black"
        android:layout_below="@id/tvCompanyAddress"
        android:fontFamily="@font/roboto"/>

    <TextView
        android:id="@+id/tvCompanyLack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto"
        android:layout_below="@id/tvCompanyPriorityLevel"/>

    <TextView
        android:id="@+id/tvCompanyOfficeNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/roboto"/>

    <ImageView
        android:id="@+id/ivNumberCall"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/icon_followup_type"
        android:adjustViewBounds="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tvNumberOfTimesCalled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/ivNumberCall"
        android:layout_marginRight="5dp"
        android:fontFamily="@font/roboto"/>





</RelativeLayout>