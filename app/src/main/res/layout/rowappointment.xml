<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    tools:ignore="ExtraText">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvApptCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Appointment #"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/roboto_condensed_bold"/>

    </RelativeLayout>

    //appointment date
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/tvApptDate1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Date:"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_condensed_bold"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tvApptDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="60dp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_condensed_bold"
            android:textSize="15sp"/>

    </RelativeLayout>

    //appointment Time
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/tvApptTime1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Time:"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_condensed_bold"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tvApptTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="60dp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_condensed_bold"
            android:textSize="15sp"/>

    </RelativeLayout>

    //appointment Contact
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/tvApptContact1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Contact:"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_condensed_bold"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tvApptContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="60dp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_condensed_bold"
            android:textSize="15sp"/>

    </RelativeLayout>

    //appointment Location
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/tvApptLocation1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Location:"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_condensed_bold"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tvApptLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="60dp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_condensed_bold"
            android:textSize="15sp"/>

    </RelativeLayout>

    //appointment Address
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/tvApptLocationAddress1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Address:"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_condensed_bold"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tvApptLocationAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="60dp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_condensed_bold"
            android:textSize="15sp"/>

    </RelativeLayout>

</LinearLayout>