<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ViewMyNameCardActivity"
    android:padding="10dp">

    <TextView
        android:id="@+id/tvViewMyNameCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saved Name Cards"
        android:textStyle="bold"
        android:textSize="25sp"/>

        <Spinner
            android:id="@+id/spinnerFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/filter"/>

        <Spinner
            android:id="@+id/spinnerSort1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/sort1"/>

        <Spinner
            android:id="@+id/spinnerSort2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/sort2"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"/>



</LinearLayout>